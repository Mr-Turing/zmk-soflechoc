&pro_micro_i2c {
    status = "okay";
    glidepoint: glidepoint@2a {
        compatible = "cirque,pinnacle";
        reg = <0x2a>;
        status = "okay";


        sensitivity = "4x";
        sleep;
        no-taps;
    };

    input_config {
        compatible = "zmk,input-configs";
    
        cirque_config {
            device = <&glidepoint>;
            xy-swap;
            y-invert;
            x-invert;
        };
    };
};
