&pro_micro_i2c {
    status = "enabled";                           
    glidepoint: glidepoint@2a {
        compatible = "cirque,pinnacle";
        reg = <0x2a>;
        status = "enabled";
        dr-gpios = <&gpio0 8 (GPIO_ACTIVE_HIGH)>;

        sensitivity = "4x";
        // sleep;
        no-taps;
    };
};

/ {
  glidepoint_listener {
    compatible = "zmk,input-listener";
    device = <&glidepoint>;

    xy-swap;
    y-invert;
    x-invert;
  };
};
